<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    tools:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:boxBackgroundColor="@color/input_background_color"
    tools:hint="@string/input_text_label"
    app:boxStrokeColor="@color/input_border_color"
    app:boxStrokeWidth="@dimen/input_border_width"
    app:hintTextAppearance="@style/LabelTextAppearance"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/fragment_pizzas_list_add_pizza_floating_button"
    app:layout_constraintStart_toStartOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        tools:text="@string/input_text_value"
        android:textSize="@dimen/input_text_size"
        android:fontFamily="@font/kalam"
        android:textColor="@color/input_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.google.android.material.textfield.TextInputLayout>