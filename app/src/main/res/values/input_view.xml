<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InputView">
        <attr name="android:label" />
        <attr name="android:text" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="android:required" />
        <attr name="readonly" format="boolean" />
    </declare-styleable>

    <style name="LabelTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/input_label_text_size</item>
        <item name="android:textColor">@color/input_label_text_color</item>
    </style>

    <dimen name="input_lazy_height">68dp</dimen>

    <dimen name="input_error_icon_size">24dp</dimen>
    <dimen name="input_error_icon_margin_top">4dp</dimen>
    <dimen name="input_error_icon_margin_end">16dp</dimen>
    <dimen name="input_padding_bottom">16dp</dimen>
    <dimen name="input_padding_top">20dp</dimen>
    <dimen name="input_border_width">1dp</dimen>
    <dimen name="input_text_size">18sp</dimen>
    <dimen name="input_label_text_size">15sp</dimen>
    <color name="input_error_background">@color/error_background</color>
    <color name="input_label_text_color">@color/mahogany_for_all_states</color>
    <color name="input_background_color">@color/white</color>
    <color name="input_border_color">@color/mahogany_for_all_states</color>
    <color name="input_text_color">@color/mahogany_for_all_states</color>
    <string name="input_text_value">Some input text</string>
    <string name="input_text_label">Some input hint</string>

</resources>