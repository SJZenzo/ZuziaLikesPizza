<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LazyView">
        <attr name="lazy_border_color" format="color" />
        <attr name="lazy_background_color" format="color" />
        <attr name="lazy_border_width" format="dimension" />
        <attr name="lazy_height" format="dimension" />
        <attr name="lazy_corner_radius" format="dimension" />
        <attr name="lazy_elevation" format="dimension" />
        <attr name="lazy_alpha" format="float" />
        <attr name="lazy_light_alpha" format="float" />
        <attr name="lazy_light_animation_duration" format="integer" />
    </declare-styleable>

    <dimen name="lazy_border_width">1dp</dimen>
    <dimen name="lazy_corner_radius">4dp</dimen>
    <dimen name="lazy_elevation">0dp</dimen>
    <item name="lazy_alpha" type="dimen" format="float">0.9f</item>
    <item name="lazy_light_alpha" type="dimen" format="float">0.8f</item>
    <integer name="lazy_light_animation_duration">1000</integer>
    <color name="lazy_background_color">@color/background</color>
    <color name="lazy_border_color">@color/mahogany</color>

</resources>